generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id               String   @id
  orderNumber      String
  totalPrice       String
  financialStatus  String?
  fulfillmentStatus String?
  createdAt        DateTime
  updatedAt        DateTime @updatedAt
  data             Json     // <-- this stores raw Shopify JSON
}
